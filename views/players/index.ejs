<%- include("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome the Players Page</h1>
            <p>Search for your favorite player!</p>
        </div>
    </header>

    <div id="player-search">
        <div id="player-search-type">
            <form action="/players" method="GET" class="form-inline">
                <div class="form-group">
                    <input type="text" name="search" placeholder="Player Name" class="form-control">
                    <input type="submit" value="Search" class="btn btn-primary">
                </div>
            </form>
        </div>
        <div id="player-search-attributes">
            CHECKBOXES FOR SEARCHING GO HERE
        </div>
    </div>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
       <% players.forEach(function(player){ %>
           <div class="col-md-3 col-sm-6">
               <div class="thumbnail">
                  <img src="<%= player.img %>">
                  <div class="caption">
                      <h4><%= player.fullname %></h4>
                  </div>
                  <p>
                      <a href="/players/<%= player._id %>" class="btn btn-primary">More Info</a>
                  </p>
               </div>
           </div>
       <% }); %>
   </div>
</div>



<%- include("../partials/footer") %>