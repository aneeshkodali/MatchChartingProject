<%- include("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome the Players Page</h1>
            <p>Search for your favorite player!</p>
        </div>
    </header>

        <div>
            <form action="/players" method="GET" class="form-inline">
                <div class="form-group">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="gender_W" name="gender" value="W">
                            <label class="form-check-label" for="gender_W">Female</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="gender_M" name="gender" value="M">
                            <label class="form-check-label" for="gender_M">Male</label>
                        </div>
                    <input type="submit" value="Search" class="btn btn-primary">

                    <!--<label for="fullname">Name: </label>-->
                    <!--<input type="text" id="fullname" name="fullname" class="form-control"><br>-->

                    <!--<input type="text" name="fullname" placeholder="Player Name" class="form-control">-->
                    <!--<input type="submit" value="Search" class="btn btn-primary">-->
                </div>
            </form>
        </div>
        
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
       <% players.forEach(function(player){ %>
           <div class="col-md-3 col-sm-6">
               <div class="thumbnail">
                  <img src="<%= player.img %>">
                  <div class="caption">
                      <h4><%= player.fullname %></h4>
                  </div>
                  <p>
                      <a href="/players/<%= player._id %>" class="btn btn-primary">More Info</a>
                  </p>
               </div>
           </div>
       <% }); %>
   </div>
</div>



<%- include("../partials/footer") %>